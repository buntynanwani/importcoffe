# Example .env for local development
# Copy this to .env and update values as needed

# Django
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SECRET_KEY=replace-me-with-a-secure-key

# Database (leave blank to use sqlite fallback)
DATABASE_ENGINE=postgresql
POSTGRES_DB=importcoffe
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_HOST=localhost
POSTGRES_PORT=5432

# Docker/Compose variables used in docker-compose.yaml
POSTGRES_PORT=5432
BACKEND_PORT=8000
DB_CONTAINER_NAME=importcoffe_db
DB_HOST=db
USE_GUNICORN=0

# Admin user for Django (optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=adminpassword
DJANGO_SUPERUSER_EMAIL=admin@example.com
